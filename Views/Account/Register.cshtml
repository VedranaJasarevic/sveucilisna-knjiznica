@model SVEUCILISNA_KNJIZNICA.Models.Korisnik
@{
    ViewBag.Title = "Registracija";
}

<fieldset>
    <legend>
        Registracija korisnika
    </legend>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
<table>
    <tr>
        <td>
            @Html.LabelFor(model => model.Ime)
        </td>
        <td>
            @Html.TextBoxFor(model => model.Ime)
        </td>
    </tr>

    <tr>
        <td>

        </td>
        <td>
            @Html.ValidationMessageFor(model => model.Ime, null, new {@class = "  text-danger "})
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(model => model.Prezime)
        </td>
        <td>
            @Html.TextBoxFor(model => model.Prezime)
        </td>
    </tr>

    <tr>
        <td>
        </td>
        <td>
            @Html.ValidationMessageFor(model => model.Prezime, null, new { @class = "  text-danger " })
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(model => model.Mejl)
        </td>
        <td>
            @Html.TextBoxFor(model => model.Mejl)
        </td>
    </tr>

    <tr>
        <td>
        </td>
        <td>
            @Html.ValidationMessageFor(model => model.Mejl, null, new { @class = "  text-danger " })
        </td>
    </tr>


    <tr>
        <td>
            @Html.LabelFor(model => model.Lozinka)
        </td>
        <td>
            @Html.PasswordFor(model => model.Lozinka)
        </td>
    </tr>

    <tr>
        <td>
        </td>
        <td>
            @Html.ValidationMessageFor(model => model.Lozinka, null, new { @class = "  text-danger " })
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(model => model.PotvrdiLozinku)
        </td>
        <td>
            @Html.PasswordFor(model => model.PotvrdiLozinku)
        </td>
    </tr>

    <tr>
        <td>
        </td>
        <td>
            @Html.ValidationMessageFor(model => model.PotvrdiLozinku, null, new { @class = " text-danger " })
        </td>
    </tr>
    
    <tr>
        <td>
        </td>
        <td>
            <table>
                <tr>
                    <td>
                        <input type="submit" value="Registriraj se" />
                    </td>
                    <td>
                        <input type="reset" value="Resetiraj" />
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    

</table>

    }
</fieldset>
